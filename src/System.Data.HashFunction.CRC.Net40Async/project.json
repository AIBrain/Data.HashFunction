{
  "version": "2.0.0-*",

  "authors": [ "Data.HashFunction Developers" ],
  "copyright": "Copyright 2014",
  "description": "Data.HashFunction implementation of the cyclic redundancy check (CRC) error-detecting code (http://en.wikipedia.org/wiki/Cyclic_redundancy_check).  Implementation is generalized to encompass all possible CRC parameters from 1 to 64 bits.",
  "title": "Data.HashFunction.CRC",

  "buildOptions": {
    "define": [
      "INCLUDE_ASYNC"
    ],
    "warningsAsErrors": true,
    "xmlDoc": true,
    "compile": {
      "include": [
        "../System.Data.HashFunction.CRC/**/*.cs",
        "../SolutionInfo.cs"
      ],
      "exclude": [
        "../System.Data.HashFunction.CRC/obj/**/*.cs"
      ]
    }
  },

  "packOptions": {
    "licenseUrl": "https://raw.githubusercontent.com/brandondahler/Data.HashFunction/master/LICENSE",
    "releaseNotes": "https://github.com/brandondahler/Data.HashFunction/wiki/Release-Notes",
    "repository": {
      "type": "git",
      "url": "https://github.com/brandondahler/Data.HashFunction/"
    },
    "tags": [ "CRC", "hash", "function", "crc32" ]
  },

  "dependencies": {
    "System.Data.HashFunction.Core.Net40Async": {
      "target": "project"
    }
  },

  "frameworks": {
    "net40": {
      "dependencies": {
        "Microsoft.Bcl.Async": "1.0.16"
      }
    }
  }
}
