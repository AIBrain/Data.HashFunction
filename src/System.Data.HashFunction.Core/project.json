{
  "version": "2.0.0-*",

  "authors": [ "Data.HashFunction Developers" ],
  "copyright": "Copyright 2014",
  "description": "C# library to create a common interface to non-cryptographic hash functions (http://en.wikipedia.org/wiki/List_of_hash_functions#Non-cryptographic_hash_functions) and provide implementations of public hash functions.  Includes wrapper for HashAlgorithm-based hash functions.",
  "title": "Data.HashFunction.Core",

  "buildOptions": {
    "keyFile": "../Data.HashFunction.Production.snk",
    "warningsAsErrors": true,
    "xmlDoc": true,
    "compile": {
      "include": [
        "../SolutionInfo.cs"
      ]
    }
  },

  "packOptions": {
    "licenseUrl": "https://raw.githubusercontent.com/brandondahler/Data.HashFunction/master/LICENSE",
    "releaseNotes": "https://github.com/brandondahler/Data.HashFunction/wiki/Release-Notes",
    "repository": {
      "type": "git",
      "url": "https://github.com/brandondahler/Data.HashFunction/"
    },
    "tags": [ "hash", "function" ]
  },

  "dependencies": {
    "System.Data.HashFunction.Interfaces": {
      "target": "project"
    }
  },

  "frameworks": {
    "net40": {
      "frameworkAssemblies": {
        "System.Numerics": ""
      }
    },
    "net45": {
      "frameworkAssemblies": {
        "System.Numerics": ""
      }
    },

    "netstandard1.0": {
      "dependencies": {
        "NETStandard.Library": "1.6.0"
      }
    },
    "netstandard1.1": {
      "dependencies": {
        "NETStandard.Library": "1.6.0",
        "System.Runtime.Numerics": "4.0.1"
      }
    }
  }
}
