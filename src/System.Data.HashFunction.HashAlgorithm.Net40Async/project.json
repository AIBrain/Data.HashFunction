{
  "version": "2.0.0-*",

  "authors": [ "Data.HashFunction Developers" ],
  "copyright": "Copyright 2016",
  "description": "Data.HashFunction implementation of a wrapper for System.Security.Cryptography.HashAlgorithm.",
  "title": "Data.HashFunction.HashAlgorithm",

  "buildOptions": {
    "define": [
      "INCLUDE_ASYNC"
    ],
    "keyFile": "../Data.HashFunction.Production.snk",
    "warningsAsErrors": true,
    "xmlDoc": true,
    "compile": {
      "include": [
        "../System.Data.HashFunction.HashAlgorithm/**/*.cs",
        "../SolutionInfo.cs"
      ],
      "exclude": [
        "../System.Data.HashFunction.HashAlgorithm/obj/**/*.cs"
      ]
    }
  },

  "packOptions": {
    "licenseUrl": "https://raw.githubusercontent.com/brandondahler/Data.HashFunction/master/LICENSE",
    "releaseNotes": "https://github.com/brandondahler/Data.HashFunction/wiki/Release-Notes",
    "repository": {
      "type": "git",
      "url": "https://github.com/brandondahler/Data.HashFunction/"
    },
    "tags": [ "HashAlgorithm", "hash", "function", "algorithm" ]
  },

  "dependencies": {
    "System.Data.HashFunction.Core.Net40Async": {
      "target": "project"
    }
  },

  "frameworks": {
    "net40": {
      "dependencies": {
        "Microsoft.Bcl.Async": "1.0.16"
      }
    }
  }
}
